@if (IsVisible)
{
    if (Success)
    {
        <div class="col-10 alert alert-info">
            <div class="col-11" style="text-align: left">
                <span>@ChildContent has been saved successfully</span>
            </div>
            <div class="col-1" style="text-align: right">
                <a style="text-underline-position: below; cursor: pointer" @onclick="(CLoseWindow)">x</a>
            </div>
        </div>
    }
    else
    {
        <div class="col-10 alert alert-danger row">
            <div class="col-11" style="text-align: left">
                <span style="font-weight: bold; font-style: italic">Чето пошло не так</span>

            </div>
            <div class="col-1" style="text-align: right">
                <a style="text-underline-position: below; cursor: pointer" @onclick="(CLoseWindow)">x</a>
            </div>
        </div>
    }
}

@code {

    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Success { get; set; }

    private void CLoseWindow()
    {
        IsVisible = false;
    }

}